@model List<ContatoModel>
@{
	ViewData["Title"] = "Listagem de Contatos";
}
<br />
<div class="text-center">
	@if (TempData["MensagemSucesso"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemSucesso"]
		</div>
	}
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemErro"]
		</div>
	}

</div>
<h1 class="display-4">Listagem de Contatos</h1>
<br />
<div class="text-end">
	<a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="AdicionarUmContato">Adicionar Novo Contato</a>
</div>
<br />
<table class="table" id="table-contatos">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Nome</th>
			<th scope="col">Email</th>
			<th scope="col">Celular</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null && Model.Any())
		{
			foreach (ContatoModel contato in Model)
			{
				<tr>
					<th scope="row">@contato.ContatoId</th>
					<td>@contato.Nome</td>
					<td>@contato.Email</td>
					<td>@contato.Telefone</td>
					<td>
						<div class="text-end">
							<div class="btn-group" role="group">
								<a role="button" class="btn btn-danger" asp-route-id="@contato.ContatoId" asp-controller="Contato" asp-action="Excluir">Excluir</a>
								<a role="button" class="btn btn-primary" asp-route-id="@contato.ContatoId" asp-controller="Contato" asp-action="Editar">Editar</a>
							</div>
						</div>
					</td>
				</tr>
			}
		}
		else
		{
			<tr class="odd"><td valing="top" colspan="5">Nenhum contato encontrado</td></tr>
		}
	</tbody>
</table>



@model ContatoModel
@{
	ViewData["Title"] = "Exclusão de Contatos";
}
<div class="text-center">
	<h3>Realmente Deseja Apagar o Contato (@Model.Nome)?</h3>
</div>
<div class="text-center">
	<a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.ContatoId">Confirmar Exclusão</a>
	<a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="index">Voltar</a>
</div>
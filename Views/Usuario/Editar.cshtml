@using ControleDeContatos.Enums
@model UsuarioModel


@{
	ViewData["Title"] = "Editor de Usuarios";
}
<div class="text-center">
	<h1 class="display-4">Editar Usuario</h1>
	<br />
	<br />
	<form asp-controller="Usuario" asp-action="AlterarUser" method="post">
		<input type="hidden" asp-for="UsuarioId" />
		<div class="container g-3">
			<div class="col-sm-12">
				<div class="text-start"><h5><label class="text-start" asp-for="Nome"></label></h5></div>
				<input type="text" asp-for="Nome" class="form-control" placeholder="Nome" aria-label="Nome">
				@Html.ValidationMessageFor(x => x.Nome)
			</div>
			<div class="col-sm-12">
				<div class="text-start"><h5><label class="text-start" asp-for="Email"></label></h5></div>
				<input type="text" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email">
				@Html.ValidationMessageFor(x => x.Email)
			</div>
			<div class="col-sm-12">
				<div class="text-start"><h5><label class="text-start" asp-for="Login"></label></h5></div>
				<input type="text" asp-for="Login" class="form-control" placeholder="Login" aria-label="Login">
				@Html.ValidationMessageFor(x => x.Login)
			</div>
			<div class="col-sm-12">
				<div class="text-start"><h5><label class="text-start" asp-for="Perfil"></label></h5></div>
				<div class="text-start">
					<select asp-for="Perfil" class="form-control">
						<option value="">Selecione</option>
						<option value="@PerfilEnum.Administrador">Administrador</option>
						<option value="@PerfilEnum.Comum">Padrão</option>
					</select>
					<div class="text-center">
					@Html.ValidationMessageFor(x => x.Perfil)
					</div>
				</div>
			<br />
			<div class="row g-2">
				<td>
					<button type="submit" class="btn btn-success">Concluir Edição</button>
					<a class="btn btn-primary" asp-controller="Usuario" asp-action="Index">Voltar</a>
				</td>
			</div>
		</div>
	</form>
</div>


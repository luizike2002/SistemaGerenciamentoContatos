@model UsuarioModel
@{
	ViewData["Title"] = "Exclusão de Usuarios";
}
<div class="text-center">
	<h3>Realmente Deseja Apagar o Usuario (@Model.Nome)?</h3>
</div>
<div class="text-center">
	<a role="button" class="btn btn-danger" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.UsuarioId">Confirmar Exclusão</a>
	<a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="index">Voltar</a>
</div>
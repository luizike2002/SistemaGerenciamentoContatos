@model List<UsuarioModel>
@{
	ViewData["Title"] = "Listagem de Usuarios";
}
<br />
<div class="text-center">
	@if (TempData["MensagemSucesso"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemSucesso"]
		</div>
	}
	@if (TempData["MensagemErro"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-sm close-alert" arial-label="Close">X</button>
			@TempData["MensagemErro"]
		</div>
	}


	<h1 class="display-4">Listagem de Usuarios</h1>
	<br />
	<div class="text-end">
		<a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="AdicionarUmUsuario">Adicionar Novo Usuario</a>
	</div>
	<br />
	<table class="table " id="table-usuarios">
		<thead>

			<tr>
				<th scope="col">#</th>
				<th scope="col">Nome</th>
				<th scope="col">Login</th>
				<th scope="col">Email</th>
				<th scope="col">Perfil</th>
				<th scope="col">Total de Contatos</th>
				<th scope="col">Data de Cadastro</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				foreach (var usuario in Model)
				{
					<tr>
						<th scope="row">@usuario.UsuarioId</th>
						<td>@usuario.Nome</td>
						<td>@usuario.Login</td>
						<td>@usuario.Email</td>
						<td>@(usuario.Perfil == ControleDeContatos.Enums.PerfilEnum.Administrador ? "Administrador" : "Padrão")</td>
						<td>
							<a href="javascript:" usuario-id=" @usuario.UsuarioId" class="btn btn-success btn-sm btn-total-contatos">
								@(usuario.Contatos != null && usuario.Contatos.Any() ? usuario.Contatos.Count : 0)
							</a>
						</td>
						<td>@usuario.DataDeCadastro</td>
						<td>
							<div class="text-end">
								<div class="btn-group" role="group">
									<a role="button" class="btn btn-danger" asp-route-id="@usuario.UsuarioId" asp-controller="Usuario" asp-action="Excluir">Excluir</a>
									<a role="button" class="btn btn-primary" asp-route-id="@usuario.UsuarioId" asp-controller="Usuario" asp-action="Editar">Editar</a>
								</div>
							</div>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>


	<div id="modalContatosUsuario" class="modal" tabindex="-1">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Listagem de Contatos do Usuario</h5>
					<<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div id="listaContatosUsuario"></div>
				</div>
			</div>
		</div>
	</div>

</div>


